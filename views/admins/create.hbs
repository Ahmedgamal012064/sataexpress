<div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">الرئيسية </a>
                                </li>
                            <li class="breadcrumb-item"><a href="/admin/permission"> الاعدادات </a>
                                </li>
                                <li class="breadcrumb-item active">اضافة حساب اداري جديد
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- Basic form layout section start -->
                <section id="basic-form-layouts">
                    <div class="row match-height">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title" id="basic-layout-form">اضافة حساب اداري جديد</h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-v font-medium-3"></i></a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                {{#if error}}
                                    {{#each error as |err|}}
                                    <div class="row mr-2 ml-2" >
                                            <button type="text" class="btn btn-lg btn-block btn-outline-danger mb-2"
                                                    id="type-error">{{err}}
                                            </button>
                                    </div>
                                    {{/each}}
                                {{/if}} 
                                <div class="card-content collapse show">
                                    <div class="card-body">
                                        <form class="form" action="/admin/permission/store"
                                            method="POST">
                                            <div class="form-body">
                                                <h4 class="form-section"><i class="ft-home"></i> بيانات الحساب الاداري </h4>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label for="projectinput1">الاسم</label>
                                                                    <input type="text" id="name"
                                                                        class="form-control"
                                                                        placeholder="الاسم"
                                                                        name="name" required>
                                                                {{!-- <span class="text-danger"></span> --}}
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label for="projectinput1">  الوظيفة </label>
                                                                <select name="type" id="" class="form-control" required>
                                                                    <option value="admin" selected> مدير </option>
                                                                    <option value="worker">موظف </option>
                                                                    <option value="dataentry">مدخل بيانات </option>
                                                                    <option value="support">دعم فني </option>
                                                                </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <label for="projectinput1">البريد الاكتروني</label>
                                                                    <input type="email" id="name"
                                                                        class="form-control"
                                                                        placeholder="البريد الاكتروني"
                                                                        name="email" required>
                                                                {{!-- <span class="text-danger"></span> --}}
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <label for="projectinput1">كلمة السر</label>
                                                                    <input type="password" id="name"
                                                                        class="form-control"
                                                                        placeholder="كلمة السر"
                                                                        name="password" required>
                                                                {{!-- <span class="text-danger"></span> --}}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <h4 class="form-section"><i class="ft-home"></i> الصلاحيات</h4>
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="users" name="users"> العملاء 
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="notifications" name="notifications"> الاشعارات
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="deleveries" name="deleveries"> المندوبين
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="vendors" name="vendors"> التجار
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="cats" name="cats"> التصنيفات
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="locations" name="locations"> المواقع
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="orders" name="orders"> الطلبات
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="reports" name="reports"> التقارير
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <fieldset class="right-checkbox">
                                                                <label>
                                                                <input type="checkbox" value="coupons" name="coupons"> كوبونات الخصم
                                                                </label>
                                                                </fieldset>
                                                            </div>
                                                        </div>
                                                    </div>

                                            <div class="form-actions">
                                                <button type="button" class="btn btn-warning mr-1"
                                                        onclick="history.back();">
                                                    <i class="ft-x"></i> تراجع
                                                </button>
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="la la-check-square-o"></i> حفظ
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- // Basic form layout section end -->
            </div>
        </div>
    </div>